<!DOCTYPE html>
<html>
  <head>
    <title>OneWordDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <!-- ナビゲーションバー -->    
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <%= link_to 'One Word Diary', homes_about_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to 'One Word Diaryとは？', homes_about_path, class: 'nab-item nav-link' %></li>
          <li><%= link_to '利用メンバー', users_path, class: 'nab-item nav-link' %></li>
          <li><%= link_to 'ひとこと一覧', words_path, class: 'nab-item nav-link' %></li>
          <li><%= link_to 'お問い合わせ', contacts_path, class: 'nab-item nav-link' %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nab-item nav-link' %></li>
        <% else %>
          <li><%= link_to 'One Word Diaryとは？', homes_about_path, class: 'nab-item nav-link' %></li>
          <li><%= link_to 'ログイン', new_user_session_path, class: 'nab-item nav-link' %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: 'nab-item nav-link' %></li>
        <% end %>
        </ul>
      </div>
    </nav>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
