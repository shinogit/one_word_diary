<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="tables">ユーザー一覧</h1>
      </div>

      <div class="bs-component">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th scope="col">ユーザーID</th>
              <th scope="col">名前</th>
              <th scope="col">ニックネーム</th>
              <th scope="col">メールアドレス</th>
              <th scope="col">ステータス</th>
              <th scope="col"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %><%= attachment_image_tag(user, :img, :fill, 50, 50, fallback: "noimage.png", size: "50x50" ) %></td>
              <td><%= user.name %></td>
              <td><%= user.nick_name %></td>
              <td><%= user.email %></td>
              <% if user.is_deleted == true %>
              <td>無効</td>
              <% else %>
              <td>有効</td>
              <% end %>
              <td><%= link_to "編集", admins_user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>