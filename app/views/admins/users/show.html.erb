<div class="container">
  <div class="row">
    <div class="col">

      <h1><%= "#{@user.name}さんのプロフィール詳細" %></h1>
      <%= attachment_image_tag(@user, :img, :fill, 210, 210, fallback: "noimage.png", size: "210x210", alt:"user_picture" ) %>
      <table class="table table-bordered">
        <tr>
          <td><%= "ID" %></td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td><%= "名前" %></td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td><%= "ニックネーム" %></td>
          <td><%= @user.nick_name %></td>
        </tr>
        <tr>
          <td><%= "メールアドレス" %></td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td><%= "自己紹介" %></td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td><%= "ステータス" %></td>
          <% if @user.is_deleted == false %>
          <td>有効会員</td>
          <% else %>
          <td>無効会員</td>
          <% end %>
        </tr>
      </table>
      <%= link_to "編集", edit_admins_user_path(@user), class: "btn btn-primary link_to_btn" %>
      <%= link_to "ユーザ一覧に戻る", admins_users_path, class: "btn btn-primary link_to_btn" %>
    </div>
  </div>
</div>