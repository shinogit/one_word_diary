<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="tables">お問合せ一覧</h1>
        <!-- 検索 -->
        <div id="search">
          <%= form_with url: admins_contacts_path, method: :get, local: true do |f| %>
          <%= f.text_field :search, placeholder: "検索したい文字を入力" %>
          <%= f.submit '検索', title: nil, class: "btn btn-primary d-flex align-items-center justify-content-center", id: "search-btn" %>
          <% end %>
        </div>
      </div>
      <div class="bs-component">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th scope="col">お問い合わせID</th>
              <th scope="col">タイトル</th>
              <th scope="col">ユーザー</th>
              <th scope="col">回答ステータス</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @contacts.each do |contact| %>
            <tr>
              <td>
                <%= contact.id %>
              </td>
              <td><%= contact.title %></td>
              <td>
                <%= attachment_image_tag(contact.user, :img, :fill, 50, 50, fallback: "noimage.png", size: "50x50" ) %><%= contact.user.name %>
              </td>
              <td>
                <%= contact.anser_status %>
              </td>
              <td>
                <%= link_to "詳細", admins_contact_path(contact), class: "btn btn-primary" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @contacts %>
      </div>
    </div>
  </div>
</div>