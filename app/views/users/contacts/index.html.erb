<div class="container">
  <div class="row">
    <h1>お問い合わせはこちらから</h1>
  </div>
  <div class="row">

    <div class="col-xs-4">
      <%= form_with(model: @contact, local: true) do |f| %>

        <div class="title">
          <%= f.text_field :title %>
        </div>

        <div class="body">
          <%= f.text_field :body %>
        </div>

        <div class="submit">
          <%= f.submit %>
        </div>

      <% end %>
    </div>

    <div class="col-xs-8">
      <table class="contacts_list">
        <thead>
          <tr>
            <th>ID</th>
            <th>お問合せ内容</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.id %></td>
              <td><%= contact.title %></td>
              <td><%= link_to "編集", edit_contact_path(contact.id) %></td>
              <td><%= link_to "削除",contact_path(contact.id), method: :delete, data: { confirm: "お問い合わせを削除しますか？" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
