<div class="container">
  <p id="notice"><%= notice %></p>
<h1>お問い合わせ内容を記入してください</h1>
  <%= form_with(model: @contact, local: true) do |f| %>

  <%# ここからエラーメッセージ %>
  <% if @contact.errors.any? %>
  <div class="error_explanation">
    <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%# ここまでエラーメッセージ %>

  <div class="title">
  <%= f.label :タイトル %><br>
    <%= f.text_field :title, placeholder: "タイトル" %>
  </div>

  <div class="body">
  <%= f.label :お問い合わせ内容 %><br>
    <%= f.text_field :body, placeholder: "お問い合わせ内容" %>
  </div>

  <div class="submit">
    <%= f.submit %>
  </div>

  <% end %>
</div>