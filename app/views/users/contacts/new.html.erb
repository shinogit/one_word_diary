<div class="container">
  <h1>お問い合わせ内容を記入してください</h1>
  <%= form_with(model: @contact, local: true) do |f| %>
  <%# ここからエラーメッセージ %>
  <% if @contact.errors.any? %>
  <div class="error_explanation">
     <% pluralize(@contact.errors.count, "error") %>
        <p><%= "#{@contact.errors.count}件エラーがあります"%></p>
    <ul>
      <% @contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%# ここまでエラーメッセージ %>
  <div class="title">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title, placeholder: "タイトル" %>
  </div>
  <div class="body">
    <%= f.label :お問い合わせ内容 %><br>
    <%= f.text_field :body, placeholder: "お問い合わせ内容" %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
  <% end %>
</div>
