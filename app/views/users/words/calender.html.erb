<div class="container">
<p id="notice"><%= notice %></p>
<h1><%= "#{@user.nick_name}さんの日記帳" %></h1>
<%= link_to "「ひとこと」書く", new_word_path, class: "btn btn-primary return" %>
<%= link_to "「ひとこと」一覧", words_path, class: "btn btn-primary return" %>
</div>
<%# ------カレンダーここから------ %>
<%= month_calendar events: @words do |date, words| %>
<%= date.day %>
<% words.each do |word| %>
<div>
  <%= link_to word.title, word %>
</div>
<% end %>
<% end %>
<%# ------カレンダーここまで------ %>

<div class="container">
  <div class="row">
    <h1>今月のひとこと一覧</h1>
  </div>
  <div class="row">
    <table class="words_list">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>時間</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @month_words.each do |word| %>
        <tr>
          <td><%= word.title %></td>
          <td><%= word.start_time.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= link_to "Show", word %></td>
          <td><%= link_to "Edit", edit_word_path(word.id) %></td>
          <td><%= link_to "Destroy",word_path(word.id), method: :delete, data: { confirm: "「ひとこと」削除しますか？" } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
