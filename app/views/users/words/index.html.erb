<p id="notice"><%= notice %></p>

<h1>自分の日記</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.title %></td>
        <td><%= word.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word.id) %></td>
        <td><%= link_to 'Destroy',word_path(word.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '日記をかく', new_word_path %>

<%= month_calendar events: @words do |date, words| %>
  <%= date.day %>

  <% words.each do |word| %>
    <div>
      <%= link_to word.title, word %>
    </div>
  <% end %>
<% end %>
