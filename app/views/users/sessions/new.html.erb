<%= flash[:alert]%>
<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->
    <!-- Icon -->
    <div class="fadeIn first">
      <%= image_tag "icon_login_bk.svg", id: "icon", alt: "User Icon", size: "30x30" %>
      <p>ユーザーログイン</p>
    </div>
    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "login", class: "fadeIn second", placeholder: "メールアドレス" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", id: "password", class: "fadeIn third", placeholder: "パスワード" %>
    </div>
    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me , class: "fadeIn fourth"%>
      <%= f.label :パスワードを記録する, class: "fadeIn fourth" %>
    </div>
    <% end %>
    <div class="actions">
      <%= f.submit "ログイン", class: "fadeIn fourth" %>
    </div>
    <% end %>
    <%= render "users/shared/links", id: "formFooter", class: "underlineHover" %>
    <%= link_to "管理者はこちら", new_admin_session_path, class: "fadeIn fourth" %>
  </div>
</div>